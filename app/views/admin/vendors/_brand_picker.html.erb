<div class="brand_picker">

	<div class="field">
		<%= select :vendor, :brand_ids, Brand.all.collect{|b| [b.name, b.id]},
				{:selected => object.id}, 
				{:name => "vendor[brand_ids][]"} %>
		<%= label :vendor, :brand_ids, 'Brand' %>
	</div>

	<div class="del_link">
		<%= link_to_function 'delete', "$(this).parents('.brand_picker').remove()" %>
	</div>


<div class="clear"></div>
</div>