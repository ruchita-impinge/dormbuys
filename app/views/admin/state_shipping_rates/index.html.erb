<% content_for :full_width_top do %>
	<%= render "shared/admin_main_nav" %>
<% end %>

<%= will_paginate(@state_shipping_rates) %>

<div class="std_box">
	
	<h3 class="std_box_heading">State Shipping Rates</h3>
	
	<div class="std_box_content">
		
		<% if @state_shipping_rates.empty? %>
			
			<h3>No state shipping rates were found</h3>
		
		<% else %>

			<table class="std_box_table">
				<thead>
			  		<tr>
                        <th class="center">State</th>
                        <th class="center">Additional cost</th>
                        <th colspan="2" class="center">Manage</th>
			  		</tr>
				</thead>
				<tbody>

				<% for state_shipping_rate in @state_shipping_rates %>
			  		<tr>
                        <td class="center"><%=h state_shipping_rate.state.full_name %></td>
                        <td class="center">$<%=h state_shipping_rate.additional_cost %></td>
                        <td class="center"><%= link_to 'Edit', edit_admin_state_shipping_rate_path(state_shipping_rate), :class => "tbl_lnk_edit" %></td>
                        <td class="center"><%= link_to 'Delete', admin_state_shipping_rate_path(state_shipping_rate), :confirm => 'Are you sure?', :method => :delete, :class => "tbl_lnk_destroy" %></td>
			  		</tr>
			<% end %>

				</tbody>
			</table>
		
		<% end %>
		
	</div><!-- end .std_box_content -->
	
	
	<div class="std_box_header_left"></div>
	<div class="std_box_header_right"></div>
	<div class="std_box_footer_left"></div>
	<div class="std_box_footer_right"></div>
	
</div><!-- end .std_box -->


<%= link_to '<span>New State Shipping Rate</span>', new_admin_state_shipping_rate_path, :class => 'button positive' %>
