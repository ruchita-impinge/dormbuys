<% content_for :full_width_top do %>
	<%= render "shared/admin_main_nav" %>
<% end %>

<%= will_paginate(@shipping_rates_tables) %>

<div class="std_box">
	
	<h3 class="std_box_heading">Shipping Rates Tables</h3>
	
	<div class="std_box_content">
		
		<% if @shipping_rates_tables.empty? %>
			
			<h3>No shipping_rates_tables were found</h3>
		
		<% else %>

			<table class="std_box_table">
				<thead>
			  		<tr>
								    		<th>Enabled</th>
											<th colspan="3" class="center">Manage</th>
			  		</tr>
				</thead>
				<tbody>

				<% for shipping_rates_table in @shipping_rates_tables %>
			  		<tr>
								    		<td><%=h shipping_rates_table.enabled %></td>
								    		<td class="center"><%= link_to 'View', admin_shipping_rates_table_path(shipping_rates_table), :class => "tbl_lnk_show" %></td>
			    		<td class="center"><%= link_to 'Edit', edit_admin_shipping_rates_table_path(shipping_rates_table), :class => "tbl_lnk_edit" %></td>
			    		<td class="center"><%= link_to 'Delete', admin_shipping_rates_table_path(shipping_rates_table), :confirm => 'Are you sure?', :method => :delete, :class => "tbl_lnk_destroy" %></td>
			  		</tr>
			<% end %>

				</tbody>
			</table>
		
		<% end %>
		
	</div><!-- end .std_box_content -->
	
	
	<div class="std_box_header_left"></div>
	<div class="std_box_header_right"></div>
	<div class="std_box_footer_left"></div>
	<div class="std_box_footer_right"></div>
	
</div><!-- end .std_box -->


<%= link_to '<span>New Shipping Rates Table</span>', new_admin_shipping_rates_table_path, :class => 'button positive' %>
