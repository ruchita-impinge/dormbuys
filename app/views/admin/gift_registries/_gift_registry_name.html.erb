<div class="gift_registry_name">
	
	<% fields_for "gift_registry[gift_registry_name_attributes][]", gift_registry_name, :index => nil do |x| %>
	
		<div class="field">
			<%= x.text_field :first_name, :class => 'textfield' %>
			<%= x.label :first_name %>
		</div>
		
		<div class="field">
			<%= x.text_field :last_name, :class => 'textfield' %>
			<%= x.label :last_name %>
		</div>
		
		
		<div class="field">
			<%= x.text_field :email, :class => 'textfield' %>
			<%= x.label :email %>
		</div>
		<div class="clear"></div>
			
	
		<div class="field del_link">
			<% if gift_registry_name.new_record? %>
				<%= link_to_function 'delete', "$(this).parents('.gift_registry_name').remove()" %>
			<% else %>
				<%= link_to_function 'delete', "mark_for_destroy(this, '.gift_registry_name')" %>
				<%= x.hidden_field :id %>
				<%= x.hidden_field :should_destroy, :value => "0", :class => 'should_destroy' %>
			<% end %>
		</div>
		
			
	<% end %>
	
	
<div class="clear"></div>
</div>
