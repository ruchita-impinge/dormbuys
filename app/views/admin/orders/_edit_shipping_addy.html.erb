<% form_for([:admin, @order], :html => {:id => 'shipping_addy_form'}) do |f| %>
	
	<div class="field">
		<%= f.text_field :shipping_first_name, :class => 'textfield' %>
		<%= f.label :shipping_first_name %>
	</div>
	<div class="clear"></div>
	
	<div class="field">
		<%= f.text_field :shipping_last_name, :class => 'textfield' %>
		<%= f.label :shipping_last_name %>
	</div>
	<div class="clear"></div>
	
	<div class="field">
		<%= f.text_field :shipping_address, :class => 'textfield' %>
		<%= f.label :shipping_address %>
	</div>
	<div class="clear"></div>
	
	<div class="field">
		<%= f.text_field :shipping_address2, :class => 'textfield' %>
		<%= f.label :shipping_address2 %>
	</div>
	<div class="clear"></div>
	
	<div class="field">
		<%= f.text_field :shipping_city, :class => 'textfield' %>
		<%= f.label :shipping_city %>
	</div>
	<div class="clear"></div>
	
	<div class="field">
		<%= f.select :shipping_state_id, State.all.collect {|s| [s.full_name, s.id]} %>
		<%= f.label :shipping_state_id %>
	</div>
	<div class="clear"></div>
	
	<div class="field">
		<%= f.text_field :shipping_zipcode, :class => 'textfield' %>
		<%= f.label :shipping_zipcode %>
	</div>
	<div class="clear"></div>
	
	<div class="field">
		<%= f.select :shipping_country_id, Country.all.collect {|c| [c.country_name, c.id]} %>
		<%= f.label :shipping_country_id %>
	</div>
	<div class="clear"></div>
	
	<div class="field">
		<%= f.text_field :shipping_phone, :class => 'textfield' %>
		<%= f.label :shipping_phone %>
	</div>
	<div class="clear"></div>
	
	
	<div class="field">
		<%= link_to '<span>Update</span>', "javascript:document.forms['shipping_addy_form'].submit();", 
				:class => 'button positive', 
				:style => 'margin: 0px;' %>
	</div>
	<div class="clear"></div>
	
<% end %>