<% content_for :full_width_top do %>
	<%= render "shared/admin_main_nav" %>
<% end %>

<%= will_paginate(@categories) %>

<div class="std_box">
	
	<h3 class="std_box_heading">Categories</h3>
	
	<div class="std_box_content">
		
		<% if @categories.empty? %>
			
			<h3>No categories were found</h3>
		
		<% else %>

			<table class="std_box_table">
				<thead>
			  		<tr>
						<th>Category Information</th>
						<th colspan="3" class="center">Manage</th>
			  		</tr>
				</thead>
				<tbody>

				<% for category in @categories %>
			  		<tr>
						<td>
							<h4>
								<%=h category.name %>
								<% unless category.visible %>
									<span class="field_error"> - NOT VISIBLE!</span>
								<% end %>
							</h4>
							<%= image_tag(category.banner.url, :class => 'category_banner_preview') %>
						</td>
						<td class="center"><%= link_to 'View', admin_category_path(category), :class => "tbl_lnk_show" %></td>
			    		<td class="center"><%= link_to 'Edit', edit_admin_category_path(category), :class => "tbl_lnk_edit" %></td>
			    		<td class="center"><%= link_to 'Delete', admin_category_path(category), :confirm => 'Are you sure?', :method => :delete, :class => "tbl_lnk_destroy" %></td>
			  		</tr>
			<% end %>

				</tbody>
			</table>
		
		<% end %>
		
	</div><!-- end .std_box_content -->
	
	
	<div class="std_box_header_left"></div>
	<div class="std_box_header_right"></div>
	<div class="std_box_footer_left"></div>
	<div class="std_box_footer_right"></div>
	
</div><!-- end .std_box -->


<%= link_to '<span>New Category</span>', new_admin_category_path, :class => 'button positive' %>
