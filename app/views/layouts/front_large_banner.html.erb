<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title><%= [@page_title, "Dormbuys.com"].join(" | ") %></title>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

	<%= render :partial => 'shared/metatags' %>
	
	<%= stylesheet_link_tag "all" %>
	<%= stylesheet_link_tag "sifr" %>
	<%= stylesheet_link_tag "form" %>
	<%= stylesheet_link_tag "colorbox" %>
	
	<%= javascript_include_tag "jquery-1.4.2.min.js" %>
	<%= javascript_include_tag "jquery.galleryScroll.1.5.2.js" %>
	<%= javascript_include_tag "jquery.colorbox-min.js" %>
	<%= javascript_include_tag "main.js" %>
	<%= javascript_include_tag "sifr.js" %>
	<%= javascript_include_tag "form.js" %>
	<%= javascript_include_tag "front.js" %>
	
	<!--[if lt IE 8]><%= stylesheet_link_tag "lt8" %><![endif]-->
	<!--[if lt IE 7]><%= stylesheet_link_tag "lt7" %><![endif]-->
	
	<%= yield :head %>
	
</head>

<% cache("front_large_banner_0", :expires_in => 5.minutes) do %>
<body>
<!-- page -->
<div id="page">
	<!-- main -->
	<div id="main">
		<h1><%= link_to 'Dormbuys.com', root_path %></h1>
<% end %>

<% cache([@category || "front_large_banner_1", "menu"], :expires_in => 5.minutes) do %>		
		<%= render :partial => 'shared/front_main_nav' %>
<% end %>	


		<% flash.each do |key, msg| %>
		    <%= content_tag :p, msg, :class => key %>
		<% end %>
	
<% cache(["front_large_banner_2", @category], :expires_in => 5.minutes) do %>	
		
		<%= render :partial => "shared/front_category_header", :object => @category %>
		
		
		<!-- middle -->
		<div class="middle">
<% end %>		

		<%= render :partial => "shared/front_subcat_tab_nav", :object => @subcategory %>
					
		<%= yield %>

<% cache("front_large_banner_3", :expires_in => 5.minutes) do %>
			
		<%= render :partial => "shared/front_footer_gift_blog" %>
			
		</div>
		<!-- middle -->
		
		<%= render :partial => "shared/front_footer_green_bar" %>
		
	</div>
	<!-- main -->
	
	<%= render :partial => "shared/front_main_header" %>
	
</div>
<!-- page -->

<%= render :partial => "shared/front_main_footer_nav" %>

<% end %>


<%= yield :eo_page %>
<%= render :partial => "shared/tracking_codes" %>

</body>
</html>